{
  "include": ["vite.config.ts"],
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Modules
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noUncheckedSideEffectImports": true,

    // Emit
    "noEmit": true,

    // Language and Environment
    "lib": ["ES2023"],
    "target": "ES2022",
    "moduleDetection": "force",

    // Interop Constraints
    "isolatedModules": true,

    // Projects
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/selection-view-vite.tsbuildinfo",

    // Completeness
    "skipLibCheck": true
  }
}
