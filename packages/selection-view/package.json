{
  "private": true,
  "name": "@bevy-inspector/selection-view",
  "type": "module",
  "scripts": {
    "prebuild": "npm run update-public",
    "build": "tsc --build && vite build --sourcemap",
    "dev": "vite",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "update-public": "copyfiles -f -E -V `node_modules @vscode/codicons`/@vscode/codicons/dist/codicon.{css,ttf} public",
    "prewatch": "npm run update-public",
    "watch": "npm-run-all -p watch:*",
    "watch:build": "vite build --watch",
    "watch:types": "tsc --build --watch",
    "postinstall": "npm --prefix `node_modules @designbyadrian/react-interactive-input`/@designbyadrian/react-interactive-input/ run build"
  },
  "dependencies": {
    "@designbyadrian/react-interactive-input": "https://github.com/splo/react-interactive-input/tarball/main",
    "@vscode-elements/elements": "^1.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "text-case": "^1.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@storybook/addon-essentials": "^8.6.7",
    "@storybook/blocks": "^8.6.7",
    "@storybook/react": "^8.6.7",
    "@storybook/react-vite": "^8.6.7",
    "@storybook/test": "^8.6.7",
    "@tomjs/vscode-webview": "^2.0.2",
    "@tsconfig/vite-react": "^3.4.0",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/vscode-webview": "^1.57.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vscode-elements/webview-playground": "^1.6.0",
    "@vscode/codicons": "^0.0.36",
    "copyfiles": "^2.4.1",
    "eslint": "^9.22.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.11.6",
    "globals": "^16.0.0",
    "node_modules-path": "^2.0.8",
    "storybook": "^8.6.7",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.27.0",
    "vite": "^6.2.2",
    "workspace-root": "^3.3.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
