{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    // "types": ["node", "vscode", "mocha", "fast-levenshtein"],
    "outDir": "out",
    "rootDir": "src",
    "paths": {
      "@bevy-inspector/messenger/*": ["../messenger/out/*"],
      "@bevy-inspector/inspector-messages": ["../inspector-messages/out/index"]
    },
    "noEmit": true,
    "sourceMap": true,
    "declarationMap": true,
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/vscode-extension.tsbuildinfo"
  },
  "include": ["src"],
  "references": [
    {
      "path": "../messenger"
    },
    {
      "path": "../inspector-messages"
    }
  ]
}
