{
  "references": [{ "path": "../messenger" }],
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "skipLibCheck": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "node10",
    "rootDir": "src",
    "paths": {
      "@bevy-inspector/messenger/*": ["../messenger/out/*"]
    },

    // Emit
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "out",
    "sourceMap": true,

    // Interop Constraints
    "esModuleInterop": true,

    // Language and Environment
    "target": "ESNext",

    // Project
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/inspector-data.tsbuildinfo"
  }
}
