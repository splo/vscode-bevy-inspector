{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "skipLibCheck": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "node10",

    // Emit
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "../../out/messages",
    "sourceMap": true,

    // Interop Constraints
    "esModuleInterop": true,

    // Language and Environment
    "lib": ["ES2022"],
    "target": "ES2022",

    // Project
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/messages.tsbuildinfo"
  }
}
