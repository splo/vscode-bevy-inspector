{
  "references": [{ "path": "../messenger" }, { "path": "../inspector-data" }, { "path": "../schema-components" }],
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.css",
    "../schema-components/TypedValueDetails.tsx"
, "../schema-components/ErrorCard.tsx"  ],
  "compilerOptions": {
    // Type Checking
    "strict": true,

    // Modules
    "allowImportingTsExtensions": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "outDir": "../../out/components-view",

    // Emit
    "declarationMap": true,
    "noEmit": false,
    "sourceMap": true,

    // Interop Constraints
    "isolatedModules": true,

    // Language and Environment
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    // Projects
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/components-view.tsbuildinfo",

    // Completeness
    "skipLibCheck": true
  }
}
