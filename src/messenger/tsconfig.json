{
  "references": [{ "path": "../inspector-data" }],
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "skipLibCheck": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "node10",

    // Emit
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "../../out/messenger",
    "sourceMap": true,

    // Interop Constraints
    "esModuleInterop": true,

    // Language and Environment
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "jsx": "react-jsx",

    // Project
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/messenger.tsbuildinfo"
  }
}
