{
  "references": [{ "path": "../messenger" }, { "path": "../inspector-data" }, { "path": "../react-interactive-input" }],
  "compilerOptions": {
    // Type Checking
    "strict": true,

    // Modules
    "allowImportingTsExtensions": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "outDir": "../../out/schema-components",

    // Emit
    "declarationMap": true,
    "noEmit": false,
    "sourceMap": true,

    // Interop Constraints
    "isolatedModules": true,

    // Language and Environment
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    // Projects
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/schema-components.tsbuildinfo",

    // Completeness
    "skipLibCheck": true
  }
}
