{
  "references": [{ "path": "../brp" }, { "path": "../inspector-data" }],
  "compilerOptions": {
    // Modules
    "outDir": "../../out/extension",

    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "target": "ES2022",
    "lib": ["ES2022"],

    // Emit
    "sourceMap": true,
    "declarationMap": true,

    // Projects
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/vscode-extension.tsbuildinfo"
  }
}
