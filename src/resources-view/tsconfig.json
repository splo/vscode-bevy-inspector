{
  "references": [{ "path": "../messenger" }, { "path": "../inspector-data" }, { "path": "../schema-components" }],
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.css"],
  "compilerOptions": {
    // Type Checking
    "strict": true,

    // Modules
    "allowImportingTsExtensions": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "outDir": "../../out/resources-view",

    // Emit
    "declarationMap": true,
    "noEmit": false,
    "sourceMap": true,

    // Interop Constraints
    "isolatedModules": true,

    // Language and Environment
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    // Projects
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/resources-view.tsbuildinfo",

    // Completeness
    "skipLibCheck": true
  }
}
