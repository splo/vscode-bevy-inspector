{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "skipLibCheck": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "Node",

    // Emit
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "../../out/react-interactive-input",
    "sourceMap": true,

    // Interop Constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    // Language and Environment
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "jsx": "react-jsx",

    // Project
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/react-interactive-input.tsbuildinfo"
  }
}
