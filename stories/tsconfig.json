{
  "extends": "@tsconfig/vite-react/tsconfig.json",
  "include": ["**/*", "**/*.json"],
  "exclude": ["tsconfig.json"],
  "references": [
    { "path": "../src/schema-components/tsconfig.json" },
    { "path": "../src/messenger/tsconfig.json" },
    { "path": "../src/inspector-data/tsconfig.json" },
    { "path": "../src/components-view/tsconfig.json" },
    { "path": "../src/resources-view/tsconfig.json" }
  ],
  "compilerOptions": {
    // Modules
    "allowImportingTsExtensions": false,
    "paths": {
      "@bevy-inspector/*": ["../src/*"]
    },
    "outDir": "../out/stories",

    // Emit
    "sourceMap": true,
    "declarationMap": true,

    // Projects
    "composite": true,
    "tsBuildInfoFile": "../node_modules/.tmp/stories.tsbuildinfo"
  }
}
