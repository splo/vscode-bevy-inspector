{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch source",
            "icon": { "id": "repo-sync", "color": "terminal.ansiYellow" },
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": "$esbuild-watch",
            "group": {
                "kind": "build",
                "group": "build",
                "isDefault": true
            }
        },
        {
            "label": "Watch tests",
            "icon": { "id": "beaker", "color": "terminal.ansiBlue" },
            "type": "npm",
            "script": "watch-tests",
            "problemMatcher": "$esbuild-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "group": "build"
            },
            "group": "build"
        },
        {
            "label": "Format all TypeScript files",
            "type": "shell",
            "command": "npx prettier --write \"src/**/*.ts\"",
            "problemMatcher": []
        }
    ]
}
