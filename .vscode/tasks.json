// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch-source",
      "detail": "Watch all source files and rebuild on change",
      "icon": { "id": "eye-watch", "color": "terminal.ansiBlack" },
      "dependsOn": ["watch-extension", "watch-webview"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch-extension",
      "detail": "Watch extension source files and rebuild on change",
      "icon": { "id": "vscode", "color": "terminal.ansiBlue" },
      "type": "npm",
      "path": "packages/vscode-extension",
      "script": "watch",
      "isBackground": true,
      "presentation": {
        "group": "build",
        "reveal": "never"
      },
      "problemMatcher": "$esbuild-watch",
      "group": "build"
    },
    {
      "label": "watch-webview",
      "detail": "Watch webview source files and rebuild on change",
      "icon": { "id": "preview", "color": "terminal.ansiCyan" },
      "type": "npm",
      "path": "packages/selection-view",
      "script": "watch",
      "isBackground": true,
      "presentation": {
        "group": "build",
        "reveal": "never"
      },
      "problemMatcher": "$tsc-watch",
      "group": "build"
    },
    {
      "label": "watch-tests",
      "detail": "Watch test files and run tests on change",
      "icon": { "id": "beaker", "color": "terminal.ansiBlue" },
      "type": "npm",
      "script": "watch-tests",
      "problemMatcher": "$esbuild-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "build"
      },
      "group": "build"
    },
    {
      "label": "start-server-example-stable",
      "detail": "Start the stable server example",
      "icon": { "id": "server-process", "color": "terminal.ansiGreen" },
      "type": "process",
      "command": "cargo",
      "args": ["run"],
      "options": {
        "cwd": "${workspaceFolder}/examples/server"
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "start-server-example-dev",
      "detail": "Start the development server example",
      "icon": { "id": "server-process", "color": "terminal.ansiGreen" },
      "type": "process",
      "command": "cargo",
      "args": ["run"],
      "options": {
        "cwd": "${workspaceFolder}/examples/server-dev"
      },
      "problemMatcher": ["$rustc"]
    }
  ]
}
