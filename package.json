{
  "private": true,
  "name": "vscode-bevy-inspector",
  "version": "0.2.0",
  "description": "Display live data from your Bevy application using the Bevy Remote Protocol HTTP plugin.",
  "version": "0.2.0",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/splo/vscode-bevy-inspector"
  },
  "main": "./dist/extension/index.js",
  "scripts": {
    "prebuild": "npm run check-types",
    "build": "node esbuild.mjs --production",
    "check-types": "tsc --build",
    "clean": "rimraf dist out node_modules/.tmp .vscode-test",
    "format": "prettier --write src",
    "postinstall": "npm --prefix node_modules/@designbyadrian/react-interactive-input/ run build",
    "lint": "eslint src",
    "storybook": "storybook dev -p 6006",
    "vscode:prepublish": "npm run build",
    "watch": "npm-run-all --parallel watch:*",
    "watch:extension": "node esbuild.mjs --watch",
    "watch:ts": "tsc --build --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^12.0.1",
    "@designbyadrian/react-interactive-input": "https://github.com/designbyadrian/react-interactive-input/tarball/c9b8b3d616016026edf1acab6f9c8cfb315edbd9",
    "@vscode-elements/elements": "^1.15.0",
    "axios": "^1.8.4",
    "fast-levenshtein": "^3.0.0",
    "json-rpc-types": "^0.1.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "text-case": "^1.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/blocks": "^8.6.7",
    "@storybook/react": "^8.6.7",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.7",
    "@tomjs/vscode-webview": "^2.0.2",
    "@tsconfig/node20": "^20.1.5",
    "@tsconfig/vite-react": "^3.4.0",
    "@types/fast-levenshtein": "^0.0.4",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/vscode": "^1.95.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode-elements/webview-playground": "^1.6.0",
    "@vscode/codicons": "^0.0.36",
    "copyfiles": "^2.4.1",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.11.6",
    "globals": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "storybook": "^8.6.12",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "activationEvents": [],
  "categories": [
    "Visualization",
    "Debuggers"
  ],
  "contributes": {
    "commands": [
      {
        "command": "bevyInspector.goToDefinition",
        "title": "Go to Definition",
        "icon": "$(go-to-file)",
        "category": "Bevy Inspector",
        "enablement": "view == bevyInspector.components && viewItem == definition"
      },
      {
        "command": "bevyInspector.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Bevy Inspector"
      },
      {
        "command": "bevyInspector.enablePolling",
        "title": "Enable Polling",
        "icon": "$(sync-ignored)",
        "category": "Bevy Inspector"
      },
      {
        "command": "bevyInspector.disablePolling",
        "title": "Disable Polling",
        "icon": "$(sync~spin)",
        "category": "Bevy Inspector"
      },
      {
        "command": "bevyInspector.destroyEntity",
        "title": "Destroy Entity",
        "icon": "$(trash)",
        "category": "Bevy Inspector",
        "enablement": "view == bevyInspector.entities && viewItem == entity"
      }
    ],
    "configuration": {
      "title": "Bevy Inspector",
      "properties": {
        "bevyInspector.url": {
          "type": "string",
          "order": 0,
          "title": "Remote URL",
          "description": "URL to the network interface where the application is running with the Bevy Remote HTTP plugin enabled.",
          "format": "uri",
          "default": "http://127.0.0.1:15702"
        },
        "bevyInspector.bevyVersion": {
          "type": "string",
          "title": "Bevy Version",
          "description": "Version of Bevy that defines the Bevy Remote Protocol version.",
          "default": "0.15",
          "enum": [
            "0.15",
            "0.16"
          ],
          "enumItemLabels": [
            "Version 0.15 or earlier",
            "Version 0.16 or later"
          ]
        },
        "bevyInspector.pollingDelay": {
          "type": "number",
          "title": "Polling delay",
          "description": "Interval in milliseconds between remote data refreshes, if polling is enabled.",
          "minimum": 1,
          "default": "1000"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "bevyInspector.refresh",
          "when": "view == bevyInspector.entities",
          "group": "navigation"
        },
        {
          "command": "bevyInspector.enablePolling",
          "when": "view == bevyInspector.entities && !bevyInspector.pollingEnabled",
          "group": "navigation"
        },
        {
          "command": "bevyInspector.disablePolling",
          "when": "view == bevyInspector.entities && bevyInspector.pollingEnabled",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "bevyInspector.destroyEntity",
          "when": "view == bevyInspector.entities && viewItem == entity",
          "group": "inline"
        },
        {
          "command": "bevyInspector.destroyEntity",
          "when": "view == bevyInspector.entities && viewItem == entity"
        }
      ],
      "commandPalette": [
        {
          "command": "bevyInspector.refresh"
        },
        {
          "command": "bevyInspector.enablePolling",
          "when": "!bevyInspector.pollingEnabled"
        },
        {
          "command": "bevyInspector.disablePolling",
          "when": "bevyInspector.pollingEnabled"
        }
      ]
    },
    "views": {
      "bevyInspectorContainer": [
        {
          "id": "bevyInspector.entities",
          "name": "Entities",
          "icon": "resources/bevy-inspector.png",
          "type": "tree"
        },
        {
          "id": "bevyInspector.components",
          "name": "Components",
          "icon": "resources/bevy-inspector.png",
          "type": "webview"
        },
        {
          "id": "bevyInspector.resources",
          "name": "Resources",
          "icon": "resources/bevy-inspector.png",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bevyInspectorContainer",
          "title": "Bevy Inspector",
          "icon": "resources/bevy-inspector.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "bevyInspector.entities",
        "contents": "Connecting to the server running the Bevy Remote Plugin...\n[Refresh](command:bevyInspector.refresh)"
      }
    ]
  },
  "displayName": "Bevy Inspector",
  "icon": "resources/bevy-inspector.png",
  "packageManager": "npm@11.0.0",
  "publisher": "splo"
}
