{
  "private": true,
  "name": "vscode-bevy-inspector",
  "version": "0.1.1",
  "description": "Display live data from your Bevy application using the Bevy Remote Protocol HTTP plugin.",
  "version": "0.2.0",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/splo/vscode-bevy-inspector"
  },
  "main": "./dist/vscode-extension/index.js",
  "scripts": {
    "build": "npm-run-all --sequential build:libs build:webview build:extension",
    "build:libs": "tsc --build packages/messenger packages/inspector-messages",
    "build:extension": "npm run --workspace packages/vscode-extension build",
    "build:webview": "npm run --workspace packages/selection-view build",
    "clean": "npm-run-all --parallel clean:*",
    "clean:packages": "npm run --workspaces --if-present clean",
    "clean:libs": "rimraf dist packages/{messenger,inspector-messages}/out",
    "clean:main": "rimraf dist node_modules/.tmp",
    "format": "prettier --write .",
    "lint": "eslint",
    "test": "npm-run-all --parallel test:*",
    "test:extension": "npm run --workspace packages/vscode-extension test",
    "test:webview": "npm run --workspace packages/selection-view test",
    "vscode:prepublish": "npm run build",
    "watch": "npm-run-all --parallel watch:*",
    "watch:libs": "tsc --build --watch --preserveWatchOutput packages/messenger packages/inspector-messages",
    "watch:extension": "npm run --workspace packages/vscode-extension watch",
    "watch:webview": "npm run --workspace packages/selection-view watch",
    "watch-tests": "npm run --workspaces --if-present watch-tests"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "activationEvents": [],
  "categories": [
    "Visualization"
  ],
  "contributes": {
    "commands": [
      {
        "command": "bevyInspector.goToDefinition",
        "title": "Go to Definition",
        "icon": "$(go-to-file)",
        "category": "Bevy Inspector"
      },
      {
        "command": "bevyInspector.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Bevy Inspector"
      },
      {
        "command": "bevyInspector.enablePolling",
        "title": "Enable Polling",
        "icon": "$(sync-ignored)",
        "category": "Bevy Inspector"
      },
      {
        "command": "bevyInspector.disablePolling",
        "title": "Disable Polling",
        "icon": "$(sync~spin)",
        "category": "Bevy Inspector"
      },
      {
        "command": "bevyInspector.destroyEntity",
        "title": "Destroy Entity",
        "icon": "$(trash)",
        "category": "Bevy Inspector"
      },
      {
        "command": "bevyInspector.copyComponentName",
        "title": "Copy Component Name",
        "icon": "$(copy)",
        "category": "Bevy Inspector"
      },
      {
        "command": "bevyInspector.copyComponentValue",
        "title": "Copy Component Value as JSON",
        "icon": "$(copy)",
        "category": "Bevy Inspector"
      }
    ],
    "configuration": {
      "title": "Bevy Inspector",
      "properties": {
        "bevyInspector.url": {
          "type": "string",
          "order": 0,
          "title": "Remote URL",
          "description": "URL to the network interface where the application is running with the Bevy Remote HTTP plugin enabled.",
          "format": "uri",
          "default": "http://127.0.0.1:15702"
        },
        "bevyInspector.bevyVersion": {
          "type": "string",
          "title": "Bevy Version",
          "description": "Version of Bevy that defines the Bevy Remote Protocol version.",
          "default": "0.15",
          "enum": [
            "0.15",
            "0.16"
          ],
          "enumItemLabels": [
            "Version 0.15 or earlier",
            "Version 0.16 or later"
          ]
        },
        "bevyInspector.pollingDelay": {
          "type": "number",
          "title": "Polling delay",
          "description": "Interval in milliseconds between remote data refreshes, if polling is enabled.",
          "minimum": 1,
          "default": "1000"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "bevyInspector.refresh",
          "when": "view == bevyInspector",
          "group": "navigation"
        },
        {
          "command": "bevyInspector.enablePolling",
          "when": "view == bevyInspector && !bevyInspector.pollingEnabled",
          "group": "navigation"
        },
        {
          "command": "bevyInspector.disablePolling",
          "when": "view == bevyInspector && bevyInspector.pollingEnabled",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "bevyInspector.destroyEntity",
          "when": "view == bevyInspector && viewItem == entity",
          "group": "inline"
        },
        {
          "command": "bevyInspector.destroyEntity",
          "when": "view == bevyInspector && viewItem == entity"
        },
        {
          "command": "bevyInspector.copyComponentName",
          "when": "view == bevyInspector && viewItem == component"
        },
        {
          "command": "bevyInspector.copyComponentValue",
          "when": "view == bevyInspector && viewItem == component"
        },
        {
          "command": "bevyInspector.goToDefinition",
          "when": "view == bevyInspector && viewItem == component"
        }
      ],
      "commandPalette": [
        {
          "command": "bevyInspector.goToDefinition"
        },
        {
          "command": "bevyInspector.refresh"
        },
        {
          "command": "bevyInspector.enablePolling",
          "when": "!bevyInspector.pollingEnabled"
        },
        {
          "command": "bevyInspector.disablePolling",
          "when": "bevyInspector.pollingEnabled"
        }
      ]
    },
    "views": {
      "bevyInspectorContainer": [
        {
          "id": "bevyInspector",
          "name": "Tree",
          "icon": "resources/bevy-inspector.png",
          "type": "tree"
        },
        {
          "id": "bevyDetails",
          "name": "Details",
          "icon": "resources/bevy-inspector.png",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bevyInspectorContainer",
          "title": "Bevy Inspector",
          "icon": "resources/bevy-inspector.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "bevyInspector",
        "contents": "Connecting to the server running the Bevy Remote Plugin...\n[Refresh](command:bevyInspector.refresh)"
      }
    ]
  },
  "displayName": "Bevy Inspector",
  "icon": "resources/bevy-inspector.png",
  "packageManager": "npm@11.0.0",
  "publisher": "splo"
}
